<Window x:Class="BalloonCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalloonCounter"
        mc:Ignorable="d"
        Title="Balloon counter" Height="288" Width="312">
    <Grid>
        <Button Content="Create" HorizontalAlignment="Left" Margin="40,17,0,0"
                VerticalAlignment="Top" Width="75"
                Name="createButton" Click="createButton_Click"/>
        <Canvas HorizontalAlignment="Left" Height="173" Margin="40,67,0,0"
                VerticalAlignment="Top" Width="233" Background="LightGray"
                Name="drawingCanvas"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,42,0,0"
                   Name="countTextBlock"
                   TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
