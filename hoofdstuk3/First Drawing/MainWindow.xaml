<Window x:Class="First_Drawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="First Drawing" Height="300" Width="300">
    <Grid>
        <Button Content="Draw" HorizontalAlignment="Left" Margin="12,27,0,0"
        VerticalAlignment="Top" Width="75"
        Name="drawButton" Click="drawButton_Click"/>
        <Canvas HorizontalAlignment="Left" 
                Height="155" 
                Width="127" 
                VerticalAlignment="Top"
                Name="paperCanvas" 
                Background="LightGray" Margin="96,67,0,0"/>
        <Canvas Grid.RowSpan="2"/>
    </Grid>
</Window>
